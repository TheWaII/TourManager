<Window x:Class="TourManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourManager.Views"
        mc:Ignorable="d"
        Title="Tour Manager" Height="708" Width="1161"
        ResizeMode="NoResize, CanMinimize">
    <Grid>



        <!--Add/edit Tour-->
        <GroupBox x:Name="GbxAddTour" Header="Add/Edit Tour" HorizontalAlignment="Left" Height="624" Margin="42,32,0,0" VerticalAlignment="Top" Width="486" Grid.ColumnSpan="2">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0*"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="LblTitle" Content="Name:" HorizontalAlignment="Left" Margin="23,9,0,0" VerticalAlignment="Top" Height="26" Width="51" RenderTransformOrigin="0.431,-0.423"/>
                <TextBox x:Name="TbxTitle" HorizontalAlignment="Left" Height="25" Margin="23,40,0,0" TextWrapping="Wrap" Text="{Binding Tour.TitleName, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="114"/>

                <Label x:Name="LblRouteInformation" Content="Route information: " HorizontalAlignment="Left" Margin="23,87,0,0" VerticalAlignment="Top" Height="26" Width="112"/>
                <TextBox x:Name="TbxFrom" HorizontalAlignment="Left" Height="23" Margin="23,118,0,0" TextWrapping="Wrap" Text="{Binding Tour.Source, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
                <TextBox x:Name="TbxTo" HorizontalAlignment="Left" Height="23" Margin="200,118,0,0" TextWrapping="Wrap" Text="{Binding Tour.Destination, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
                <Label x:Name="LblArrow" Content="---->" HorizontalAlignment="Left" Margin="148,118,0,0" VerticalAlignment="Top" Height="26" Width="37" RenderTransformOrigin="0.757,0.654"/>

                <Label x:Name="LblTourDistance" Content="Tour distance (km): " HorizontalAlignment="Left" Margin="23,370,0,0" VerticalAlignment="Top" Height="26" Width="129"/>
                <TextBox x:Name="TbxTourDistance" HorizontalAlignment="Left" Height="24" Margin="23,401,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Text="{Binding Tour.TourDistance}" IsEnabled="False"/>
                <RichTextBox x:Name="RbxDescription"  HorizontalAlignment="Left" Height="73" Margin="23,472,0,0" VerticalAlignment="Top" Width="430">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="{Binding Tour.Description}"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
                <Label x:Name="LblDescription" Content="Description:" HorizontalAlignment="Left" Margin="17,441,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.589,-0.308" Height="26" Width="73"/>
                <Button x:Name="BtnAdd" Command="{Binding AddTourCommand}"  Content="Confirm" HorizontalAlignment="Left" Margin="23,566,0,0" VerticalAlignment="Top" Width="430" Height="25"/>
                <Image x:Name="ImgRoute" HorizontalAlignment="Left" Height="211" Margin="17,159,0,0" VerticalAlignment="Top" Width="436"/>

            </Grid>

        </GroupBox>

        <!-- Tours List / Delete Tour-->
        <GroupBox x:Name="GbxTourList" Header="Tours" HorizontalAlignment="Left" Height="624" Margin="559,32,0,0" VerticalAlignment="Top" Width="229">

            <Grid HorizontalAlignment="Left" Height="604" Margin="0,10,-12,-13" VerticalAlignment="Top" Width="229">
                <ListBox x:Name="LbxTours" HorizontalAlignment="Left" Height="533" Margin="19,0,0,0" VerticalAlignment="Top" Width="186"/>
                <Button x:Name="BtnDelete" Content="Delete" HorizontalAlignment="Left" Margin="19,557,0,0" VerticalAlignment="Top" Width="186" Height="25"/>
            </Grid>

        </GroupBox>

        <!-- Logs -->
        <GroupBox x:Name="GbxLogs" Header="Logs" HorizontalAlignment="Left" Height="624" Margin="814,32,0,0" VerticalAlignment="Top" Width="321">

            <Grid HorizontalAlignment="Left" Margin="0,7,-2,-13" Width="311">
                <ListView x:Name="listView" HorizontalAlignment="Left" Height="445" Margin="5,10,0,0" VerticalAlignment="Top" Width="292">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Label x:Name="LblStartDate" Content="Start: " HorizontalAlignment="Left" Margin="14,460,0,0" VerticalAlignment="Top" Height="26" Width="40"/>
                <Label x:Name="LblEndDate" Content="End: " HorizontalAlignment="Left" Margin="167,460,0,0" VerticalAlignment="Top" Height="26" Width="36" RenderTransformOrigin="4.5,-0.692"/>
                <DatePicker SelectedDate="{Binding Tour.StartDate}" HorizontalAlignment="Left" Margin="14,500,0,0" VerticalAlignment="Top" Height="25" Width="114"/>
                <DatePicker SelectedDate="{Binding Tour.EndDate}" HorizontalAlignment="Left" Margin="167,500,0,0" VerticalAlignment="Top" Height="25" Width="114"/>
                <Button x:Name="BtnUpdateLog" Content="Update" HorizontalAlignment="Left" Margin="10,562,0,0" VerticalAlignment="Top" Width="287" RenderTransformOrigin="-0.933,1.8"/>
            </Grid>

        </GroupBox>

    </Grid>
</Window>
