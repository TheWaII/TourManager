<Window x:Class="TourPlanner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:TourPlanner.ViewModels"
        mc:Ignorable="d"
        Title="Tour Manager" Height="672" Width="902"
        MinHeight="708"
        MinWidth="1152"
        >
    <Window.DataContext>
        <viewModels:AddTourViewModel/>
    </Window.DataContext>
    <Viewbox Stretch="Fill">
        <Grid Margin="0,-2,0,0" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="538*"/>
                <ColumnDefinition Width="249*"/>
                <ColumnDefinition Width="343*"/>
            </Grid.ColumnDefinitions>
            <!--Add/edit Tour-->
            <GroupBox x:Name="GbxAddTour" Header="Add/Edit Tour" HorizontalAlignment="Stretch" Margin="23,32,29,9" VerticalAlignment="Stretch" Width="486">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0*"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="LblTitle" Content="Name:" HorizontalAlignment="Left" Margin="23,9,0,0" VerticalAlignment="Top" Height="26" Width="51"/>
                    <TextBox Grid.Column="0" x:Name="TbxTitle" HorizontalAlignment="Left" Height="25" Margin="23,40,0,0" TextWrapping="Wrap" Text="{Binding TitleName, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="114"/>

                    <Label Grid.Column="0" x:Name="LblRouteInformation" Content="Route information: " HorizontalAlignment="Left" Margin="23,87,0,0" VerticalAlignment="Top" Height="26" Width="112"/>
                    <TextBox Grid.Column="0" x:Name="TbxFrom" HorizontalAlignment="Left" Height="23" Margin="23,118,0,0" TextWrapping="Wrap" Text="{Binding Source, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
                    <TextBox Grid.Column="0" x:Name="TbxTo" HorizontalAlignment="Left" Height="23" Margin="200,118,0,0" TextWrapping="Wrap" Text="{Binding Destination, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
                    <Label Grid.Column="0" x:Name="LblArrow" Content="---->" HorizontalAlignment="Left" Margin="148,118,0,0" VerticalAlignment="Top" Height="26" Width="37" RenderTransformOrigin="0.757,0.654"/>
                    <Button Grid.Column="0" x:Name="BtnCheck" Margin="325,118,0,460" Content="Validate" Command="{Binding ValidateCommand}"></Button>
                    <Label Grid.Column="0" x:Name="LblTourDistance" Content="Tour distance (miles): " HorizontalAlignment="Left" Margin="23,370,0,0" VerticalAlignment="Top" Height="26" Width="129"/>
                    <TextBox Grid.Column="0" x:Name="TbxTourDistance" HorizontalAlignment="Left" Height="24" Margin="23,401,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Text="{Binding TourDistance}" IsEnabled="False"/>
                    <RichTextBox Grid.Column="0" x:Name="RbxDescription"  HorizontalAlignment="Left" Height="73" Margin="23,472,0,0" VerticalAlignment="Top" Width="430">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="{Binding Description}"/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <Label Grid.Column="0" x:Name="LblDescription" Content="Description:" HorizontalAlignment="Left" Margin="17,441,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.589,-0.308" Height="26" Width="73"/>
                    <Button Grid.Column="0" x:Name="BtnAdd" Command="{Binding AddTourCommand}"  Content="Confirm" HorizontalAlignment="Stretch" Margin="0,578,0,0" VerticalAlignment="Stretch"/>
                    <Image Grid.Column="0" x:Name="ImgRoute" HorizontalAlignment="Left" Height="211" Margin="23,154,0,0" VerticalAlignment="Top" Source="{Binding Route, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </GroupBox>

            <!-- Tours List / Delete Tour-->
            <GroupBox x:Name="GbxTourList" Header="Tours" HorizontalAlignment="Stretch" Margin="0,32,15,9" Grid.Column="1" VerticalAlignment="Stretch">

                <Grid HorizontalAlignment="Left" Height="595" Margin="0,10,-12,-4" VerticalAlignment="Top" Width="229">
                    <ListBox x:Name="LbxTours" HorizontalAlignment="Stretch" Margin="10,-7,10,30" VerticalAlignment="Stretch"/>
                    <Button x:Name="BtnDelete" Content="Delete" Margin="10,570,10,4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                </Grid>

            </GroupBox>

            <!-- Logs -->
            <GroupBox x:Name="GbxLogs" Header="Logs" Height="624" Margin="10,31,17,0" VerticalAlignment="Top" Grid.Column="2">

                <Grid HorizontalAlignment="Left" Margin="0,7,-2,-13" Width="311">
                    <ListView x:Name="ListView" HorizontalAlignment="Left" Height="445" Margin="5,10,0,0" VerticalAlignment="Top" Width="292">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Label x:Name="LblStartDate" Content="Start: " HorizontalAlignment="Left" Margin="14,460,0,0" VerticalAlignment="Top" Height="26" Width="40"/>
                    <Label x:Name="LblEndDate" Content="End: " HorizontalAlignment="Left" Margin="167,460,0,0" VerticalAlignment="Top" Height="26" Width="36" RenderTransformOrigin="4.5,-0.692"/>
                    <DatePicker SelectedDate="{Binding StartDate}" HorizontalAlignment="Left" Margin="14,500,0,0" VerticalAlignment="Top" Height="25" Width="114"/>
                    <DatePicker SelectedDate="{Binding EndDate}" HorizontalAlignment="Left" Margin="167,500,0,0" VerticalAlignment="Top" Height="25" Width="114"/>
                    <Button x:Name="BtnUpdateLog" Content="Update" HorizontalAlignment="Left" Margin="10,572,0,0" VerticalAlignment="Top" Width="287" RenderTransformOrigin="-0.933,1.8"/>
                </Grid>

            </GroupBox>

        </Grid>
    </Viewbox>
</Window>
